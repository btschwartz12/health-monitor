@model ISHealthMonitor.UI.ViewModels.LogViewerModel
@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row justify-content-center text-center">
        <h1>Log Viewer</h1>
    </div>

    <div class="row justify-content-center mt-4">

        <div class="col-6">
            <input type="text" id="demo" class="form-control">
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        @foreach (var type in Model.EntryTypeMap)
        {
            <div class="col-auto form-check form-switch rounded border ms-2">
                <input class="form-check-input" type="checkbox" value="" id="@type.Value.ToString()" checked>
                <label class="form-check-label" for="@type.Value.ToString()">
                    @type.Value.ToString()
                </label>
            </div>
        }
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-auto form-check form-switch">
            <input class="form-check-input" type="checkbox" value="" id="isSystemLogCheck">
            <label class="form-check-label" for="isSystemLogCheck">
                Include System Logs?
            </label>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-auto">
            <button id="filterButton" class="btn btn-primary">Submit <i id="submitLogSpinner" class="fa fa-spinner fa-spin d-none"></i></button>
        </div>
    </div>

    <div id="alertLogs" class="alert alert-danger d-block d-none my-2" role="alert"></div>

    <div class="row mt-4">
        <div id="accordion" class="col-12">
            <!-- Dynamically generated accordion goes here -->
        </div>
    </div>
</div>



@section Scripts{

    <script>
        var model = @Html.Raw(Json.Serialize(Model));

    </script>



    <script src="~/lib/daterangepicker/daterangepicker.js"></script>
    <script src="~/js/LogViewer.js" asp-append-version="true"></script>
}
