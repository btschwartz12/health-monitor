@model ISHealthMonitor.Core.Data.DTO.UserDTO

@{
    Layout = null;
}


<form id="userForm" onsubmit="return SubmitCreateUserForm()">
    <div class="row">
        <div class="col-12">
            <div class="form-group text-center">
                <label for="select-user"><strong>User</strong></label>
                <select id="select-user" class="" placeholder="Loading..."></select>
            </div>
        </div>
    </div>


    <div class="d-flex justify-content-center align-items-center" style="margin: 10px">
        <div class="form-check form-switch">
            <input asp-for="IsAdmin" class="form-check-input" type="checkbox" disabled />
            <label asp-for="IsAdmin" class="form-check-label"></label>
            <span asp-validation-for="IsAdmin" class="text-danger"></span>
        </div>
    </div>

    <div id="errorMessage" class="alert alert-danger d-none" role="alert"></div>

    <input asp-for="ID" type="hidden" />
    <input asp-for="Guid" id="Guid" type="hidden" />

    <div class="form-group d-flex justify-content-center">
        <button id="submitButton" type="submit" class="btn btn-success mr-3" disabled>Submit</button>
        <button type="reset" onclick="hideUserAddEditModal()" class="btn btn-secondary mr-3">Cancel</button>
    </div>
</form>

<script>

    $(document).ready(function () {
        const userGuid = @Html.Raw(Json.Serialize(Model.Guid));


        initUserSelectize(userGuid);
    });
    
</script>
